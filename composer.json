{
    "name": "cruxinator/php-bitmask",
    "type": "library",
    "description": "PHP Bitmask implementation",
    "keywords": ["enum", "Bitmask"],
    "homepage": "https://github.com/cruxinator/php-bitmask",
    "license": "MIT",
    "authors": [
        {
            "name": "Christopher Harris",
            "homepage": "https://cruxinator.com/"
        },
        {
            "name": "Alex Goodwin",
            "homepage": "https://cruxinator.com/"
        }
    ],
    "autoload": {
        "psr-4": {
            "Cruxinator\\BitMask\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cruxinator\\BitMask\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.0",
        "myclabs/php-enum": "^1.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5|10.*",
        "phpunit/php-code-coverage": "^9.2.28|10.*"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
